        <h1>Welcome Sanyog !</h1>
        <h1>Here are your Blogs</h1>
      </center> 

      <br><br>
      <hr><br>
      
      <!-- Blogs -->


      <% if(Blogdata.length>0){ %>
        <% Blogdata.forEach(result => { %>
            <div class="container blogs">
              <div class="row">
                <div class="col-sm">
                  <img class="blog-pic" src="images/profile-card.JPG" alt="">
                </div>
                <div class="col-8">
                  <br>
                  <p>Posted on : <%= result.createdAt.toLocaleDateString() %></p>
                  <p class="blog-post">
                    <%- result.body.substring(0,500) + "...." %>
                    <a href="/blog/<%= result._id %>">Read more</a>
                  </p>
                </div>
              </div>
            </div>
        <%})%>
      <%}else{%>
        <center>
          <h1>There are not blogs</h1>
        </center>   
      <%}%>

